property validCredentials2 ${http:loginBase64Encoder("joe:secretPin")}
property authHeader1 ${http:append("Application Token ", validCredentials2)}
property validCredentials ${http:loginBase64Encoder("joe:welcome")}
property authHeader2 ${http:append("Negotiate ", validCredentials)}

connect http://localhost:8008/echo
connected

write method "GET"
write header "Authorization" ${authHeader1}
write close

read status "401" "Unauthorized"
read header "WWW-Authenticate" "Application Token"
read notify FIRST_REQUEST_COMPLETE

connect await FIRST_REQUEST_COMPLETE
connect http://localhost:8008/echo
connected

write method "GET"
write header "Authorization" ${authHeader2}
write close

read status "401" "Unauthorized"
